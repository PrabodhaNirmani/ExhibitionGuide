            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDwNW5TzMrdk-y0E7buMtG8S6qte1JVyAM" />

        <activity android:name=".Activities.MainActivity" />
